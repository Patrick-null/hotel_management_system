<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.patrick.mapper.OrdersMapper">
    <insert id="insert">
        INSERT INTO `orders`(`ono`,`gid`,`otime`) VALUES (#{ono},#{gid},#{otime})
    </insert>
    <update id="update">
        update  `orders` SET `ono`=#{ono},`gid`=#{gid},`otime`=#{otime}
    </update>
    <delete id="delete">
        DELETE FROM `orders` WHERE `oid`=#{oid}
    </delete>
    <select id="selectAll" resultType="orders">
        select * from `orders`
    </select>
    <select id="selectByOno" resultType="orders">
        select * from `orders` where ono = #{ono}
    </select>
    <select id="selectById" resultType="orders">
        select * from `orders` where oid=#{oid}
    </select>
</mapper>